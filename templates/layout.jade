doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width, initial-scale=1')
      title
        block title
          = locals.title
      link(rel='shortcut icon', href=contents.assets.images['favicon.ico'].url)
      link(rel='icon', type='image/png', href=contents.assets.images['favicon-32x32.png'].url, sizes='32x32')
      link(rel='icon', type='image/png', href=contents.assets.images['favicon-16x16.png'].url, sizes='16x16')
      link(rel='stylesheet', href=contents.assets.styles['main.scss'].url)
  body(class=bodyclass)
    header.header
      div.content-wrap
        block header
          ul
            li 
              a(href='about') About Us
            li 
              a(href='proposal') The Proposal
            li 
              a(href='photos') Photos
            li 
              a(href='wedding') The Wedding
            li 
              a(href='accommodations') Accommodations
            li 
              a(href='registry') Registry
    div#content
      block content
    footer
      block footer
        section
          p &copy; #{ new Date().getFullYear() } #{ locals.owner }
          p
            a(href='https://github.com/jnordberg/wintersmith') Github
            //- please leave the 'powered by' if you use the design
